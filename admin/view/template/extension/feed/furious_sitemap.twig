{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">        
        <button type="submit" form="form-voucher" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
		<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
        </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">	
	{% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-voucher" class="form-horizontal">
			
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-home-status">{{ entry_home_status }}</label>
                <div class="col-sm-10">
					<select name="feed_furious_sitemap_home_status" id="input-home-status" class="form-control">
						{% if feed_furious_sitemap_home_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
						{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
						{% endif %}
					</select>                 
                </div>
            </div>			  
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-home-priority">{{ entry_home_priority }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_home_priority" value="{{ feed_furious_sitemap_home_priority ? feed_furious_sitemap_home_priority : '1' }}" placeholder="{{ entry_home_priority }}" id="input-home-priority" class="form-control" />
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-home-frequency">{{ entry_home_frequency }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_home_frequency" value="{{ feed_furious_sitemap_home_frequency ? feed_furious_sitemap_home_frequency : 'Always' }}" placeholder="{{ entry_home_frequency }}" id="input-home-frequency" class="form-control" />
                </div>
            </div>
			<!--HOME_end-->
			<div class="form-group required">
                <label class="col-sm-2 control-label" for="input-category-status">{{ entry_category_status }}</label>
                <div class="col-sm-10">
					<select name="feed_furious_sitemap_category_status" id="input-category-status" class="form-control">
						{% if feed_furious_sitemap_category_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
						{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
						{% endif %}
					</select>                  
                </div>
            </div>			  
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-category-priority">{{ entry_category_priority }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_category_priority" value="{{ feed_furious_sitemap_category_priority ? feed_furious_sitemap_category_priority : '0.7' }}" placeholder="{{ entry_category_priority }}" id="input-category-priority" class="form-control" />
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-category-frequency">{{ entry_category_frequency }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_category_frequency" value="{{ feed_furious_sitemap_category_frequency ? feed_furious_sitemap_category_frequency : 'Always' }}" placeholder="{{ entry_category_frequency }}" id="input-category-frequency" class="form-control" />
                </div>
            </div>
			<!--CAT_end-->
			<div class="form-group required">
                <label class="col-sm-2 control-label" for="input-manufacturer-status">{{ entry_manufacturer_status }}</label>
                <div class="col-sm-10">
					<select name="feed_furious_sitemap_manufacturer_status" id="input-manufacturer-status" class="form-control">
						{% if feed_furious_sitemap_manufacturer_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
						{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
						{% endif %}
					</select>               
                </div>
            </div>			  
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-manufacturer-priority">{{ entry_manufacturer_priority }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_manufacturer_priority" value="{{ feed_furious_sitemap_manufacturer_priority ? feed_furious_sitemap_manufacturer_priority : '0.7' }}" placeholder="{{ entry_manufacturer_priority }}" id="input-manufacturer-priority" class="form-control" />
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-manufacturer-frequency">{{ entry_manufacturer_frequency }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_manufacturer_frequency" value="{{ feed_furious_sitemap_manufacturer_frequency ? feed_furious_sitemap_manufacturer_frequency : 'Daily' }}" placeholder="{{ entry_manufacturer_frequency }}" id="input-manufacturer-frequency" class="form-control" />
                </div>
            </div>
			<!--MAN_end-->
			<div class="form-group required">
                <label class="col-sm-2 control-label" for="input-product-status">{{ entry_product_status }}</label>
                <div class="col-sm-10">
					<select name="feed_furious_sitemap_product_status" id="input-product-status" class="form-control">
						{% if feed_furious_sitemap_product_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
						{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
						{% endif %}
					</select>
                </div>
            </div>			  
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-product-priority">{{ entry_product_priority }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_product_priority" value="{{ feed_furious_sitemap_product_priority ? feed_furious_sitemap_product_priority : '1' }}" placeholder="{{ entry_product_priority }}" id="input-product-priority" class="form-control" />
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-product-frequency">{{ entry_product_frequency }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_product_frequency" value="{{ feed_furious_sitemap_product_frequency ? feed_furious_sitemap_product_frequency : 'Daily' }}" placeholder="{{ entry_product_frequency }}" id="input-product-frequency" class="form-control" />
                </div>
            </div>
			<!--PRO_end--> 
			<div class="form-group required">
                <label class="col-sm-2 control-label" for="input-information-status">{{ entry_information_status }}</label>
                <div class="col-sm-10">
					<select name="feed_furious_sitemap_information_status" id="input-information-status" class="form-control">
						{% if feed_furious_sitemap_information_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
						{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
						{% endif %}
					</select>                
                </div>
            </div>			  
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-information-priority">{{ entry_information_priority }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_information_priority" value="{{ feed_furious_sitemap_information_priority ? feed_furious_sitemap_information_priority : '0.5' }}" placeholder="{{ entry_information_priority }}" id="input-information-priority" class="form-control" />
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-information-frequency">{{ entry_information_frequency }}</label>
                <div class="col-sm-10">
                  <input type="text" name="feed_furious_sitemap_information_frequency" value="{{ feed_furious_sitemap_information_frequency ? feed_furious_sitemap_information_frequency : 'Weekly' }}" placeholder="{{ entry_information_frequency }}" id="input-information-frequency" class="form-control" />
                </div>
            </div>
			<!--ELSE_end-->
			<div class="form-group">                
				<label class="col-sm-2 control-label" for="input-langs">{{ entry_furious_langs }}</label>
                <div class="col-sm-10">
					{% for language in languages %}
						<img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> <input type="text" name="feed_furious_sitemap_langs[{{ language.code }}]" value="{{ feed_furious_sitemap_langs[language.code] ? feed_furious_sitemap_langs[language.code] : language.code }}" placeholder="{{ entry_information_langs }}" id="input-langs" class="form-control" />  
					{% endfor %}
                </div>
            </div>			
            <!--EOF-->
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_furious_status }}</label>
                <div class="col-sm-10">
                  <select name="feed_furious_sitemap_status" id="input-status" class="form-control">
                    {% if feed_furious_sitemap_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
            </div>
			<div class="form-group required">
                <label class="col-sm-2 control-label" for="input-product-url">{{ entry_data_feed }}</label>
                <div class="col-sm-10">
					<input type="text" name="feed_furious_sitemap_sitemap_url" value="{{ feed_furious_sitemap_sitemap_url }}" id="input-product-url" class="form-control" />
                </div>
            </div>
        </form>
      </div>
    </div>
  </div>

</div>
{{ footer }}